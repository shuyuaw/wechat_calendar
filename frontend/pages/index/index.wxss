/* frontend/pages/index/index.wxss */

/* ADDED: Styles for safe area and page container */
.page-container-safe-index {
  padding-top: env(safe-area-inset-top);
  padding-top: calc(env(safe-area-inset-top) + 20rpx); /* Adjust as needed */
  box-sizing: border-box;
}

/* MODIFIED: Container styles */
.container {
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  /* font-family: sans-serif; was removed from previous .container definition */
  /* padding: 20rpx; was replaced by more specific paddings */
}

/* ADDED: Styles for header actions */
.header-actions {
  display: flex; /* Allows button to be side-by-side or managed easily */
  justify-content: space-between; /* Pushes title left, button right */
  align-items: center;
  margin-bottom: 20rpx; /* Space below header */
}

/* MODIFIED: Page title styles */
.page-title {
  font-size: 36rpx; /* Was 40rpx */
  font-weight: bold;
  /* text-align: center; was removed */
  /* margin-bottom: 30rpx; was removed */
}

/* ADDED: Styles for my bookings button */
.my-bookings-button {
  /* Add specific styling if needed, e.g., margin-left */
}

/* Existing styles below */
.loading-message,
.error-message,
.no-slots-message {
  color: #888;
  text-align: center;
  padding: 40rpx;
}

.error-message button {
    margin-top: 20rpx;
}

.slot-list {
  margin-top: 20rpx;
}

.slot-item {
  display: flex; 
  justify-content: space-between; 
  align-items: center; 
  padding: 25rpx 20rpx;
  border: 1px solid #eee;
  margin-bottom: 15rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
  cursor: pointer; 
}

.slot-item:active {
    background-color: #e0e0e0; 
}

.slot-time {
  font-size: 28rpx;
  flex-grow: 1; 
  margin-right: 20rpx;
}

.slot-status {
  font-size: 24rpx;
  color: green; 
  margin-right: 20rpx;
}

.book-indicator {
    font-size: 26rpx;
    color: #007aff; 
    font-weight: bold;
}

.slot-status.booked {
  color: #888;
}